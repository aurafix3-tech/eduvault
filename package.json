{
  "name": "eduvault",
  "version": "1.0.0",
  "description": "Educational Resource Management Platform for Kenyan Higher Education",
  "main": "simple-server.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "setup": "node setup.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:student\" \"npm run dev:admin\" \"npm run dev:superadmin\"",
    "dev:server": "cd server && npm run dev",
    "dev:student": "cd student-frontend && npm start",
    "dev:admin": "cd admin-frontend && npm start",
    "dev:superadmin": "cd super-admin-frontend && npm start",
    "build": "echo 'No build step for root'",
    "build:student": "cd student-frontend && npm run build",
    "build:admin": "cd admin-frontend && npm run build",
    "build:superadmin": "cd super-admin-frontend && npm run build",
    "start": "node simple-server.js",
    "install:all": "npm install && cd server && npm install && cd ../student-frontend && npm install && cd ../admin-frontend && npm install && cd ../super-admin-frontend && npm install",
    "seed": "cd server && npm run seed",
    "test": "cd server && npm test",
    "test:coverage": "cd server && npm run test:coverage"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.9.4",
    "qrcode": "^1.5.4",
    "socket.io": "^4.7.2",
    "stripe": "^13.5.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "keywords": ["education", "kenya", "learning", "platform"],
  "author": "EduVault Team",
  "license": "PROPRIETARY"
}
